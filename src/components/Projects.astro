---
import Gradient from '../../public/svg/Gradient.astro';
---

<section id="proyecto">
	<div class="parent">
		<div class="div1"><Gradient /></div>
		<div class="div2">
			<img class="h-[360px] w-[640px] rounded-[10px]" src="/public/png/mokepon.png" alt="img" />
		</div>
		<div class="div3">
			<section class="border-2 border-[#ccd6f62a] rounded-2xl blur-sm ">
                <img class="h-[160px] w-[600px] absolute" src="/public/png/noise.png" alt="">
                <div class="h-[160px] w-[600px] bg-[#ccd6f64d] blur-md rounded-2xl">
					<h2 class="text-black">lor</h2>
                </div>
            </section>
		</div>
		<div class="div4">
			<h2 class="flex  justify-center pl-24 text-[34px]  text-[#CCD6F6] pt-6">
				Mokepon
			</h2>
		</div>
		<div class="div5"></div>
	</div>

	<style>
		.parent {
			display: grid;
			grid-template-columns: repeat(6, 1fr);
			grid-template-rows: repeat(5, 1fr);
			grid-column-gap: 0px;
			grid-row-gap: 0px;
		}

		.div1 {
			grid-area: 1 / 4 / 6 / 7;
		}
		.div2 {
			grid-area: 2 / 4 / 6 / 7;
		}
		.div3 {
			grid-area: 3 / 1 / 5 / 5;
			display: flex;
			align-items: flex-start;
			justify-content: end;
			justify-content: space-evenly;
		}
		.div4 {
			grid-area: 2 / 1 / 3 / 3;
		}
		.div5 {
			grid-area: 1 / 1 / 2 / 2;
		}
	</style>
</section>

<section id="proyecto2">
	<div class="parent">
		<div class="div1"></div>
		<div class="div2"></div>
		<div class="div3"></div>
		<div class="div4"></div>
		<div class="div5"></div>
	</div>

	<style>
		.parent {
			display: grid;
			grid-template-columns: repeat(6, 1fr);
			grid-template-rows: repeat(5, 1fr);
			grid-column-gap: 0px;
			grid-row-gap: 0px;
		}

		.div1 {
			grid-area: 1 / 1 / 6 / 4;
		}
		.div2 {
			grid-area: 2 / 1 / 6 / 4;
		}
		.div3 {
			grid-area: 3 / 3 / 5 / 7;
		}
		.div4 {
			grid-area: 2 / 5 / 3 / 7;
		}
		.div5 {
			grid-area: 1 / 6 / 2 / 7;
		}
	</style>
</section>
